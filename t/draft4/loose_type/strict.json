[
    {
        "description": "Included string, integer, number",
        "schema": {
            "type": "object",
            "properties": {
                "foo": {
                    "type": "string"
                },
                "bar": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 10
                },
                "baz": {
                    "type": "number"
                },
                "fizz": {
                    "enum": [0, 1]
                },
                "piyo": {
                    "enum": [{
                        "key1": 1,
                        "key2": 2
                    }, {
                        "key1": 2,
                        "key2": 1
                    }]
                }
            },
            "required": ["foo"]
        },
        "tests": [
            {
                "description": "Only foo",
                "data": {
                    "foo": "val"
                },
                "valid": true
            },
            {
                "description": "String integer value",
                "data": {
                    "foo": "val",
                    "bar": "5"
                },
                "valid": false
            },
            {
                "description": "String numeric value",
                "data": {
                    "foo": "val",
                    "baz": "-1.23"
                },
                "valid": false
            },
            {
                "description": "string integer value for enum",
                "data": {
                    "foo": "val",
                    "fizz": "0"
                },
                "valid": false
            },
            {
                "description": "object for enum",
                "data": {
                    "foo": "val",
                    "piyo": {
                        "key1": 1,
                        "key2": 2
                    }
                },
                "valid": true
            },
            {
                "description": "String integer value in object for enum",
                "data": {
                    "foo": "val",
                    "piyo": {
                        "key1": 1,
                        "key2": "2"
                    }
                },
                "valid": false
            }
        ]
    }
]
